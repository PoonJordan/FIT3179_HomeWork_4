{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "Country_selection",
      "bind": {
        "input": "select",
        "options": [null, "Malaysia", "Japan", "Afghanistan", "China"],
        "labels": ["Show All", "Malaysia", "Japan", "Afghanistan", "China"],
        "name": "Country Selection"
      }
    }
  ],
  "vconcat": [
    {
      "title": "Death cause by Indoor Air pollution in 2019",
      "width": 1000,
      "height": 600,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "fill": "grey"},
          "encoding": {
            "color": {
              "field": "Deaths_Cause_By_Air_Pollution",
              "type": "quantitative",
              "scale": {"type": "symlog","domain": [10, 100000, 400000],"range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]},
              "title": "Number of Deaths"
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Deaths_Cause_By_Air_Pollution",
                "type": "quantitative",
                "title": "Deaths"
              },
              {
                "field": "population",
                "type": "quantitative",
                "title": "Population"
              },
              {
                "field": "Deaths per 10,000 Population",
                "type": "quantitative",
                "format": ".2f"
              }
            ]
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {"url": "data/air_pollution_deaths.csv"},
                "key": "Entity",
                "fields": ["Deaths_Cause_By_Air_Pollution", "population"]
              }
            },
            {
              "calculate": "datum.Deaths_Cause_By_Air_Pollution/datum.population * 10000",
              "as": "Deaths per 10,000 Population"
            }
          ]
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "color": {
              "field": "Deaths_Cause_By_Air_Pollution",
              "type": "quantitative",
              "scale": {"type": "symlog"},
              "title": "Number of Deaths"
            }
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {"url": "data/air_pollution_deaths.csv"},
                "key": "Entity",
                "fields": [
                  "Deaths_Cause_By_Air_Pollution",
                  "population",
                  "Entity"
                ]
              }
            },
            {
              "calculate": "datum.Deaths_Cause_By_Air_Pollution/datum.population * 10000",
              "as": "Deaths per 10,000 Population"
            },
            {
              "filter": "Country_selection == null || datum.Entity == Country_selection"
            }
          ]
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "text",
            "baseline": "middle",
            "dx": -5,
            "fontSize": 15,
            "fontStyle": "italic"
          },
          "encoding": {
            "longitude": {
              "field": "properties.LABEL_X",
              "type": "quantitative"
            },
            "latitude": {"field": "properties.LABEL_Y", "type": "quantitative"},
            "text": {"field": "Entity", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['Entity'] == 'Russia' || datum['Entity'] == 'Australia' || datum['Entity'] == 'New Zealand' || datum['Entity'] == 'Italy' || datum['Entity'] == 'Yemen' || datum['Entity'] == 'United States of America'",
                "value": 1
              },
              "value": 0
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Deaths_Cause_By_Air_Pollution",
                "type": "quantitative",
                "title": "Deaths"
              },
              {
                "field": "population",
                "type": "quantitative",
                "title": "Population"
              },
              {
                "field": "Deaths per 10,000 Population",
                "type": "quantitative",
                "format": ".2f"
              }
            ]
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {"url": "data/air_pollution_deaths.csv"},
                "key": "Entity",
                "fields": [
                  "Deaths_Cause_By_Air_Pollution",
                  "population",
                  "Entity"
                ]
              }
            },
            {
              "calculate": "datum.Deaths_Cause_By_Air_Pollution/datum.population * 10000",
              "as": "Deaths per 10,000 Population"
            }
          ]
        }
      ]
    },
    {
      "data" : {
        "url": "data/air_pollution_deaths.csv"
      },
      "width": 600,
      "height": 500,
      "mark": "bar",
      "title": "Top 5 countries in SEA Deaths Cause By Air Pollution ",
      "encoding": {
        "x": {"field": "Entity", "type": "nominal", "axis": {"labelAngle": 0}, "title": "Country"},
        "y": {"field": "Deaths_Cause_By_Air_Pollution", "type": "quantitative", "title": "Deaths Cause By Air_Pollution"},
        "tooltip": {"field": "Deaths_Cause_By_Air_Pollution", "type": "quantitative"}
      },
      "transform": [
          {"filter": "datum.Entity == 'Indonesia' ||  datum.Entity == 'Cambodia' || datum.Entity == 'Thailand' || datum.Entity == 'Philippines' || datum.Entity == 'Vietnam' " }

      ]
    }
  ]
}