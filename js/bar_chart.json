{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",    
    
    "data" : {
        "url": "data/air_pollution_deaths.csv"
    },
    "width": 600,
    "height": 500,
    "mark": "bar",
    "title": "Top 5 countries in SEA Deaths Cause By Air Pollution ",
    "encoding": {
        "x": {"field": "Entity", "type": "nominal", "axis": {"labelAngle": 0}, "title": "Country"},
        "y": {"field": "Deaths_Cause_By_Air_Pollution", "type": "quantitative", "title": "Deaths Cause By Air Pollution"},
        "tooltip": {"field": "Deaths_Cause_By_Air_Pollution", "type": "quantitative"}
    },
    "transform": [
        {"filter": "datum.Entity == 'Indonesia' ||  datum.Entity == 'Cambodia' || datum.Entity == 'Thailand' || datum.Entity == 'Philippines' || datum.Entity == 'Vietnam' " }
    ]
}